<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:textViewStyle">@style/Base.Widget.TextView</item>
    </style>

    <style name="Base.Widget.TextView" parent="android:Widget.TextView">
        <item name="android:hyphenationFrequency" tools:targetApi="m">normal</item>
    </style>

    <style name="ThemeTransaction" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/transaction_color</item>
        <item name="colorPrimaryDark">@color/transaction_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowFullscreen">false</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="nonBold" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabIndicator">@drawable/bg_tab_feed</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:letterSpacing">0</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    // rounded bottom sheet fragment

    <style name="BottomSheetDarker" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_border_bottom_sheet_darker</item>
        <item name="android:statusBarColor">@color/eee</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_border_bottom_sheet</item>
        <item name="android:statusBarColor">@color/eee</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>


    <style name="BottomSheetDialogDarker" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/BottomSheetDarker</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="TransparentBottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="TransparentBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="bottomSheetStyle">@style/TransparentBottomSheet</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="TransparentInputBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="bottomSheetStyle">@style/TransparentBottomSheet</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="OrderListTabItem" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="variation_button" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/variation_button</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="AppThemeViewProduct" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AddBalanceTabs" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="CollapsingToolbarLayoutCollapsedTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#333</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="home_tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="NavigationDrawerStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>


    <style name="WideDialog" parent="android:Theme.Material.Light.Dialog.NoActionBar">
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>

    </style>


    <style name="WideDialogComments" parent="android:Theme.Material.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowSwipeToDismiss">true</item>
    </style>

    <style name="TransparentDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowSwipeToDismiss">true</item>

        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>

    </style>


    <style name="FullWidthDialog" parent="android:Theme.Material.Light.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="FullWidthTransparentDialog" parent="FullWidthDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
