<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="StickyScrollView">
        <attr name="stuckShadowHeight" format="dimension" />
        <attr name="stuckShadowDrawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="RatingReviews">

        <attr name="style" format="enum">
            <enum name="style1" value="1" />
            <enum name="style2" value="2" />
        </attr>

        <attr name="color" format="color" />
        <attr name="rounded" format="boolean"/>
        <attr name="gradiant" format="integer" />
        <attr name="width" format="dimension" />
        <attr name="text_size" format="dimension" />
        <attr name="text_color" format="color" />
        <attr name="spaces" format="dimension" />
        <attr name="max_value" format="integer" />
        <attr name="show_label" format="boolean" />
        <attr name="show_raters" format="boolean" />
        <attr name="animation" format="boolean" />

    </declare-styleable>

    <declare-styleable name="SmoothCheckBox">
        <attr name="duration" format="integer"/>
        <attr name="stroke_width" format="dimension"/>
        <attr name="color_tick" format="color"/>
        <attr name="color_checked" format="color"/>
        <attr name="color_unchecked" format="color"/>
        <attr name="color_unchecked_stroke" format="color"/>
    </declare-styleable>


</resources>