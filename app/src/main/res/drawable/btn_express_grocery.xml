    <item android:id="@android:id/mask">

        <shape android:shape="rectangle" >
            <solid android:color="#FFF4EA" />
            <padding android:left="15dp"
                android:right="15dp"
                android:top="15dp"
                android:bottom="15dp"/>

        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle" >
            <solid android:color="#FFF4EA" />
            <padding android:left="15dp"
                android:right="15dp"
                android:top="15dp"
                android:bottom="15dp"/>
        </shape>
    </item>
</ripple>