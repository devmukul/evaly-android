<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    android:id="@+id/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="5dp"
    app:cardPreventCornerOverlap="true">

    <bd.com.evaly.evalyshop.views.StickyScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        tools:context=".activity.buynow.BuyNowFragment">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/transparent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/sellerHolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="20dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="0"
                        android:paddingLeft="5dp"
                        android:tint="#555"
                        app:srcCompat="@drawable/ic_menu_store" />

                    <TextView
                        android:id="@+id/shop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:paddingRight="15dp"
                        android:text="Seller: Unknown"
                        android:textColor="#555"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/variation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textColor="#555"
                        android:textSize="14sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:focusableInTouchMode="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="20dp">


                    <ImageView
                        android:id="@+id/product_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_below="@+id/sellerHolder"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        app:srcCompat="@drawable/ic_placeholder_small" />

                    <LinearLayout
                        android:id="@+id/countHolder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/priceTotal"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="false"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/minus"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_weight="0"
                            android:background="#eee"
                            android:clickable="true"
                            android:padding="6dp"
                            app:srcCompat="@drawable/ic_minus" />

                        <EditText
                            android:id="@+id/quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:maxLines="1"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="1"
                            android:textSize="18sp"
                            android:focusable="false"/>

                        <ImageView
                            android:id="@+id/plus"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_weight="0"
                            android:background="#eee"
                            android:clickable="true"
                            android:padding="6dp"
                            app:srcCompat="@drawable/ic_plus" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/priceTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/price"
                        android:layout_alignStart="@+id/product_name"
                        android:layout_marginTop="6dp"
                        android:text="৳ 174900"
                        android:textColor="#f57224"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/wholeSalePrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/priceTotal"
                        android:layout_toRightOf="@+id/product_image"
                        android:text="2100"
                        android:textColor="#f57224"
                        android:textSize="13sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/sellerHolder"
                        android:layout_alignParentTop="false"
                        android:layout_marginRight="20dp"
                        android:layout_toRightOf="@+id/product_image"
                        android:clickable="true"
                        android:maxLines="2"
                        android:text="Product Title"
                        android:textColor="#444"
                        android:textIsSelectable="false"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/product_name"
                        android:layout_alignStart="@+id/product_name"
                        android:layout_marginTop="3dp"
                        android:text="৳ 174900 x 1"
                        android:textColor="#777"
                        android:textSize="13sp" />


                </RelativeLayout>

                <View
                    android:id="@+id/dividerView"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#fafafa" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/variationHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/variation_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:text=""
                    android:textColor="#333"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewVariation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="20dp">

                </androidx.recyclerview.widget.RecyclerView>

                <View
                    android:id="@+id/dividerViewVariation"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#fafafa" />

            </LinearLayout>


            <include
                layout="@layout/bottom_sheet_checkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="20dp">



                <Button
                    android:id="@+id/add_to_cart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/black_btn"
                    android:stateListAnimator="@null"
                    android:text="ADD TO CART"
                    android:textColor="#fff"
                    android:layout_weight="1"
                    android:layout_marginRight="7dp"/>

                <Button
                    android:id="@+id/buy_now"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/buy_now_btn"
                    android:stateListAnimator="@null"
                    android:text="CHECK OUT"
                    android:textColor="#fff"
                    android:layout_weight="1"
                    android:layout_marginLeft="7dp"/>


            </LinearLayout>





        </LinearLayout>




    </bd.com.evaly.evalyshop.views.StickyScrollView>

</androidx.cardview.widget.CardView>