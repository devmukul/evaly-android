<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="bd.com.evaly.evalyshop.ui.product.productDetails.ViewProductViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.product.productDetails.ViewProductActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            tools:visibility="gone">

            <net.opacapp.multilinecollapsingtoolbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:padding="0dp"
                app:collapsedTitleTextAppearance="@style/CollapsingToolbarLayoutCollapsedTextStyle"
                app:contentScrim="@color/white"
                app:expandedTitleGravity="bottom|left"
                app:expandedTitleMarginBottom="15dp"
                app:expandedTitleMarginEnd="20dp"
                app:expandedTitleMarginStart="20dp"
                app:expandedTitleMarginTop="0dp"
                app:expandedTitleTextAppearance="@style/CollapsingToolbarLayoutExpandedTextStyle"
                app:layout_scrollFlags="enterAlwaysCollapsed|scroll|exitUntilCollapsed"
                app:maxLines="2"
                app:scrimAnimationDuration="10"
                app:statusBarScrim="@color/white"
                app:title="GNGKGG"
                app:titleEnabled="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/relativeLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:scaleType="fitCenter"
                            app:layout_constraintDimensionRatio="H,1:1"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <bd.com.evaly.evalyshop.views.SliderViewPager
                            android:id="@+id/sliderPager"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/fff"
                            android:visibility="visible"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:id="@+id/sliderIndicatorBg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="18dp"
                            android:background="@drawable/tab_indicator_bg"
                            android:gravity="center"
                            android:paddingStart="2dp"
                            android:paddingTop="3dp"
                            android:paddingRight="2dp"
                            android:paddingBottom="3dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent">

                            <com.google.android.material.tabs.TabLayout
                                android:id="@+id/sliderIndicator"
                                android:layout_width="wrap_content"
                                android:layout_height="8dp"
                                app:tabBackground="@drawable/indicator_selector_product"
                                app:tabGravity="center"
                                app:tabIndicatorFullWidth="false"
                                app:tabIndicatorGravity="center"
                                app:tabIndicatorHeight="0dp"
                                app:tabPaddingEnd="7dp"
                                app:tabPaddingStart="7dp">

                                <com.google.android.material.tabs.TabItem
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="" />

                                <com.google.android.material.tabs.TabItem
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="" />

                            </com.google.android.material.tabs.TabLayout>

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/half_dp_bg_lighter"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="0dp"
                        android:layout_weight="0"
                        android:maxLines="2"
                        android:textColor="@color/fff"
                        android:textIsSelectable="true"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:visibility="invisible"
                        tools:text="Product name" />

                </LinearLayout>


                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/z_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/transparent"
                    android:paddingRight="15dp"
                    app:layout_collapseMode="pin">


                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_toolbar_product_details"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="?attr/actionBarItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:src="@drawable/ic_left_arrow_new"
                            android:tint="@color/black" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="end"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/bg_toolbar_product_details"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="11dp"
                            android:background="?attr/actionBarItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:src="@drawable/ic_share"
                            android:tint="@color/black" />
                    </LinearLayout>

                </androidx.appcompat.widget.Toolbar>


            </net.opacapp.multilinecollapsingtoolbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/sticky_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="45dp"
            android:background="@color/fff"
            android:paddingTop="0dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/productInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/fff"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/variantHolder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="20dp"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:background="@color/separator_light" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="0dp"
                            android:text="Variation"
                            android:textColor="#555"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvVariant"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:orientation="vertical"
                            android:paddingBottom="15dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:itemCount="2"
                            tools:listitem="@layout/item_variation_image" />

                    </LinearLayout>

                    <View
                        android:id="@+id/view7"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/separator_light" />


                    <RelativeLayout
                        android:id="@+id/skuHolder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/vouchers"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/sku"
                            android:textColor="#555"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/sku"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/arrow2"
                            android:layout_toRightOf="@+id/vouchers"
                            android:textColor="#f00"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/arrow2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_keyboard_arrow_right"
                            android:tint="#999" />

                    </RelativeLayout>


                    <View
                        android:id="@+id/description_view"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@color/separator_light" />

                    <RelativeLayout
                        android:id="@+id/description_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/spec"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/description"
                            android:textColor="#555"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/arrow1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_keyboard_arrow_right"
                            android:tint="@color/c666"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/spec"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="8dp"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/spec_view"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@color/separator_light" />

                    <RelativeLayout
                        android:id="@+id/spec_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/specification"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="12dp"
                            android:text="@string/specifications"
                            android:textColor="#555"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/spec_list"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/specification"
                            android:nestedScrollingEnabled="false"
                            tools:itemCount="4"
                            tools:listitem="@layout/specification_item">

                        </androidx.recyclerview.widget.RecyclerView>

                    </RelativeLayout>

                    <View
                        android:id="@+id/scrollToDivider"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@color/separator_light" />


                    <RelativeLayout
                        android:id="@+id/selectedShopHolder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvCashback"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/cashback_bg"
                            android:paddingHorizontal="10dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="3dp"
                            android:textColor="@color/fff"
                            android:textSize="11sp"
                            android:visibility="gone"
                            tools:text="30% Cashback"
                            tools:visibility="visible" />

                        <LinearLayout
                            android:id="@+id/selectedShopClickHolder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:clickable="true"
                            android:longClickable="false"
                            android:orientation="horizontal"
                            android:paddingLeft="20dp"
                            android:paddingTop="20dp"
                            android:paddingRight="15dp">

                            <ImageView
                                android:id="@+id/shopLogo"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="20dp"
                                android:adjustViewBounds="true"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_evaly_placeholder" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingRight="20dp">

                                <TextView
                                    android:id="@+id/shopName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"
                                    android:ellipsize="end"
                                    android:fontFamily="sans-serif-medium"
                                    android:maxLines="5"
                                    android:paddingBottom="8dp"
                                    android:textAlignment="textStart"
                                    android:textColor="@color/c333"
                                    android:textSize="17sp"
                                    tools:text="Shop Name" />

                                <LinearLayout
                                    android:id="@+id/shopLocationHolder"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="top"
                                    android:paddingBottom="5dp">

                                    <ImageView
                                        android:layout_width="12dp"
                                        android:layout_height="20dp"
                                        android:layout_marginEnd="6dp"
                                        android:adjustViewBounds="true"
                                        android:src="@drawable/ic_marker_filled"
                                        app:tint="#555" />

                                    <TextView
                                        android:id="@+id/shopLocation"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="2"
                                        android:textAlignment="textStart"
                                        android:textColor="#555"
                                        android:textIsSelectable="true"
                                        android:textSize="14sp"
                                        tools:text="Road 14, Dhanmondi 27, Dhaka" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/shopPhoneHolder"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="12dp"
                                        android:layout_height="20dp"
                                        android:layout_marginEnd="6dp"
                                        android:adjustViewBounds="true"
                                        android:src="@drawable/ic_call"
                                        app:tint="#555" />

                                    <TextView
                                        android:id="@+id/shopPhone"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:autoLink="phone"
                                        android:ellipsize="end"
                                        android:maxLines="2"
                                        android:textAlignment="textStart"
                                        android:textColor="#555"
                                        android:textColorLink="#555"
                                        android:textIsSelectable="true"
                                        android:textSize="14sp"
                                        tools:text="01758154554" />
                                </LinearLayout>


                                <LinearLayout
                                    android:id="@+id/stockHolder"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp">

                                    <ImageView
                                        android:layout_width="12dp"
                                        android:layout_height="20dp"
                                        android:layout_marginEnd="6dp"
                                        android:adjustViewBounds="true"
                                        android:paddingBottom="2dp"
                                        android:src="@drawable/ic_box"
                                        app:tint="#555" />

                                    <TextView
                                        android:id="@+id/stock"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:autoLink="phone"
                                        android:ellipsize="end"
                                        android:maxLines="2"
                                        android:text="@string/stock_colon_available"
                                        android:textAlignment="textStart"
                                        android:textColor="#555"
                                        android:textColorLink="#555"
                                        android:textIsSelectable="true"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="4dp"
                                    android:background="@color/f1f3f4" />

                                <LinearLayout
                                    android:id="@+id/selectedShopPriceHolder"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="sans-serif-medium"
                                        android:singleLine="true"
                                        android:text=" ৳ 5000"
                                        android:textColor="#f00"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/max_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_weight="0"
                                        android:text=" ৳ 6000"
                                        android:textColor="#777"
                                        android:textSize="12sp" />
                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/buyNowHolder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/selectedShopClickHolder"
                            android:orientation="horizontal"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp">

                            <Button
                                android:id="@+id/add_cart"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="7dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn_f1f3f4"
                                android:fontFamily="sans-serif"
                                android:paddingBottom="1dp"
                                android:stateListAnimator="@null"
                                android:text="@string/add_to_cart"
                                android:textAllCaps="false"
                                android:textColor="@color/c333"
                                android:textSize="14sp"
                                android:textStyle="normal" />

                            <Button
                                android:id="@+id/buy_now"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="20dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn_red"
                                android:fontFamily="sans-serif"
                                android:paddingBottom="1dp"
                                android:stateListAnimator="@null"
                                android:text="@string/buy_now"
                                android:textAllCaps="false"
                                android:textColor="@color/fff"
                                android:textSize="14sp"
                                android:textStyle="normal" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:layout_below="@id/buyNowHolder"
                            android:layout_marginTop="20dp"
                            android:background="@color/separator_light" />

                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/availableShopsHolder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingEnd="10dp">

                            <TextView
                                android:id="@+id/avlshop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginBottom="15dp"
                                android:layout_weight="1"
                                android:text="@string/available_at_shop"
                                android:textColor="#555"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:id="@+id/availableShopsTypeHolder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:background="@drawable/input_brd_round"
                                android:clickable="true"
                                android:gravity="center_vertical"
                                android:paddingStart="12dp"
                                android:paddingTop="2dp"
                                android:paddingEnd="2dp"
                                android:paddingBottom="5dp">

                                <TextView
                                    android:id="@+id/tvShopType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="All"
                                    android:textColor="@color/c444" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="14dp"
                                    app:srcCompat="@drawable/ic_sort_down" />
                            </LinearLayout>

                        </LinearLayout>


                        <ProgressBar
                            android:id="@+id/progressBarShop"
                            android:layout_width="150dp"
                            android:layout_height="130dp"
                            android:layout_weight="0"
                            android:paddingTop="40dp"
                            android:paddingBottom="60dp"
                            tools:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/shopScroller"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/availableShops"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:nestedScrollingEnabled="false"
                                android:orientation="horizontal"
                                android:paddingStart="6dp"
                                android:paddingEnd="10dp"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                tools:listitem="@layout/available_shop" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/empty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="20dp"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="150dp"
                                android:layout_height="80dp"
                                android:layout_weight="0"
                                app:srcCompat="@drawable/ic_sad_cart" />

                            <TextView
                                android:id="@+id/tvNoShop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:gravity="center_horizontal"
                                android:paddingBottom="10dp"
                                android:text="This product is currently \nnot available at any shop" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:layout_marginTop="3dp"
                            android:background="@color/separator_light" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="0dp">

                        <TextView
                            android:id="@+id/rateTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:text="Reviews &amp; Ratings"
                            android:textColor="#555"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <include
                            android:id="@+id/review"
                            layout="@layout/layout_review_bar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="15dp"
                            android:paddingRight="0dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/half_dp_bg_light" />

                        <TextView
                            android:id="@+id/viewAllReviews"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="17dp"
                            android:text="View all or write a review"
                            android:textAlignment="center"
                            android:textColor="#f68b01"
                            android:textSize="16sp" />


                    </LinearLayout>


                    <View

                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/separator_light" />


                </LinearLayout>

                <TextView
                    android:id="@+id/relatedTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@color/fafafa"
                    android:paddingLeft="15dp"
                    android:paddingTop="8dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="18dp"
                    android:text="@string/explore_more_products"
                    android:textColor="#555"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/products"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/fafafa"
                    android:nestedScrollingEnabled="false"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0"
                    android:background="@color/fafafa"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp" />


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/stickyButtons"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_bottom_nav"
            android:elevation="8dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:translationZ="12dp"
            app:layout_behavior="bd.com.evaly.evalyshop.util.MoveUpwardBehavior">

            <LinearLayout
                android:id="@+id/buttonsHolder"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:paddingVertical="2dp">

                <ImageView
                    android:id="@+id/addToWishlist"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="0"
                    android:clickable="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    app:srcCompat="@drawable/ic_favorite_black" />

                <LinearLayout
                    android:id="@+id/cart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="0"
                    android:background="@drawable/my_cart_bg"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp"
                        android:clickable="false"
                        android:fontFamily="sans-serif-thin"
                        android:gravity="center"
                        android:paddingStart="20dp"
                        android:paddingEnd="10dp"
                        android:text="MY CART"
                        android:textAlignment="center"
                        android:textColor="@color/c444"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cartCount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_cart_count"
                        android:gravity="center"
                        android:minWidth="20dp"
                        android:paddingVertical="3dp"
                        android:paddingStart="10dp"
                        android:paddingLeft="6dp"
                        android:paddingEnd="15dp"
                        android:paddingRight="6dp"
                        android:text="0"
                        android:textColor="#155724"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/addToCart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="0"
                    android:background="@drawable/available_shop_bg"
                    android:clickable="true"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="center"
                    android:text="AVAILABLE AT SHOPS"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>