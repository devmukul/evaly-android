                    <!--                        <TextView-->
                    <!--                            android:id="@+id/rateTitle"-->
                    <!--                            android:layout_width="wrap_content"-->
                    <!--                            android:layout_height="wrap_content"-->
                    <!--                            android:layout_marginLeft="15dp"-->
                    <!--                            android:layout_marginTop="3dp"-->
                    <!--                            android:layout_marginBottom="10dp"-->
                    <!--                            android:text="Reviews &amp; Ratings"-->
                    <!--                            android:textColor="#555"-->
                    <!--                            android:textSize="16sp"-->
                    <!--                            android:textStyle="bold" />-->


                    <!--                        <include-->
                    <!--                            layout="@layout/layout_review_bar"-->
                    <!--                            android:layout_width="match_parent"-->
                    <!--                            android:layout_height="match_parent"-->
                    <!--                            android:layout_marginLeft="10dp"-->
                    <!--                            android:layout_marginTop="0dp"-->
                    <!--                            android:layout_marginBottom="15dp"-->
                    <!--                            android:paddingRight="0dp" />-->

                    <!--                        <View-->
                    <!--                            android:layout_width="match_parent"-->
                    <!--                            android:layout_height="1dp"-->
                    <!--                            android:layout_marginLeft="20dp"-->
                    <!--                            android:layout_marginRight="20dp"-->
                    <!--                            android:background="@drawable/half_dp_bg_light" />-->

                    <!--                        <TextView-->
                    <!--                            android:id="@+id/viewAllReviews"-->
                    <!--                            android:layout_width="match_parent"-->
                    <!--                            android:layout_height="wrap_content"-->
                    <!--                            android:layout_marginLeft="15dp"-->
                    <!--                            android:layout_marginTop="15dp"-->
                    <!--                            android:layout_marginBottom="17dp"-->
                    <!--                            android:text="View all or write a review"-->
                    <!--                            android:textAlignment="center"-->
                    <!--                            android:textColor="#f68b01"-->
                    <!--                            android:textSize="16sp" />-->


                    <!--                    </LinearLayout>-->


                    <View

                        android:background="@color/separator_light"
                        android:layout_height="10dp"
                        android:layout_width="match_parent" />


                </LinearLayout>

                <TextView
                    android:background="#fafafa"
                    android:id="@+id/relatedTitle"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:layout_width="match_parent"
                    android:paddingBottom="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:text="Explore More Products"
                    android:textColor="#555"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <androidx.recyclerview.widget.RecyclerView
                    android:background="#fafafa"
                    android:id="@+id/products"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:nestedScrollingEnabled="false"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

                <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:background="#fafafa"
                    android:id="@+id/progressBar"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    android:layout_width="match_parent"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp" />


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:gravity="center_vertical"
            android:id="@+id/stickyButtons"
            android:layout_gravity="bottom"
            android:layout_height="56dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:translationZ="5dp"
            app:layout_behavior="bd.com.evaly.evalyshop.util.MoveUpwardBehavior">


            <View
                android:background="@drawable/half_dp_bg"
                android:id="@+id/view13"
                android:layout_height="2dp"
                android:layout_marginBottom="-1dp"
                android:layout_weight="0"
                android:layout_width="match_parent" />

            <LinearLayout
                android:background="#fff"
                android:id="@+id/buttonsHolder"
                android:layout_height="55dp"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:background="@drawable/white_ripple"
                    android:clickable="true"
                    android:id="@+id/addToWishlist"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="0"
                    android:layout_width="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    app:srcCompat="@drawable/ic_favorite_black" />

                <LinearLayout
                    android:background="@drawable/my_cart_bg"
                    android:clickable="true"
                    android:gravity="center"
                    android:id="@+id/cart"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:clickable="false"
                        android:fontFamily="sans-serif-thin"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp"
                        android:layout_width="wrap_content"
                        android:text="MY CART"
                        android:textAlignment="center"
                        android:textColor="#ff665d"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:background="@drawable/cart_count"
                        android:gravity="center"
                        android:id="@+id/cartCount"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="0"
                        android:layout_width="wrap_content"
                        android:paddingBottom="2dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="2dp"
                        android:text="0"
                        android:textColor="#155724"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:background="@drawable/available_shop_bg"
                    android:clickable="true"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="center"
                    android:id="@+id/addToCart"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="6dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="AVAILABLE AT SHOPS"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>