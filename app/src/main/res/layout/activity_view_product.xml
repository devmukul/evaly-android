<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="bd.com.evaly.evalyshop.ui.product.productDetails.ViewProductViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.product.productDetails.ViewProductActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:collapsedTitleTextAppearance="@style/CollapsingToolbarLayoutCollapsedTextStyle"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleGravity="bottom|center_horizontal"
                app:expandedTitleTextAppearance="@style/CollapsingToolbarLayoutExpandedTextStyle"
                app:layout_scrollFlags="enterAlwaysCollapsed|scroll|exitUntilCollapsed"
                app:scrimAnimationDuration="100"
                app:title="View Product"
                app:titleEnabled="true">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="200dp" >

                    <bd.com.evaly.evalyshop.views.SliderViewPager
                        android:id="@+id/sliderPager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/sliderIndicator"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="-55dp"
                        android:layout_marginBottom="18dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/sliderPager"
                        app:tabBackground="@drawable/indicator_selector"
                        app:tabGravity="center"
                        app:tabIndicatorHeight="0dp">

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" />

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" />

                    </com.google.android.material.tabs.TabLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:layout_below="@+id/select_color"-->
                <!--android:background="@color/separator_light"-->
                <!--app:layout_collapseMode="parallax"/>-->


                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/z_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/transparent"
                    android:paddingRight="15dp"
                    app:layout_behavior="util.ToolbarAlphaScrollBehavior"
                    app:layout_collapseMode="pin">

                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:background="?attr/actionBarItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_left_arrow_new"
                        android:tint="#000" />


                    <ImageView
                        android:id="@+id/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:background="?attr/actionBarItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_share"
                        android:tint="#000" />


                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:background="#fff"
            android:fillViewport="false"
            android:id="@+id/sticky_scroll"
            android:layout_height="match_parent"
            android:layout_marginBottom="55dp"
            android:layout_width="match_parent"
            android:transitionGroup="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/product_name"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:textColor="#000"
                    android:textIsSelectable="true"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    tools:text="Product name" />

                <LinearLayout
                    android:background="#fff"
                    android:id="@+id/productInfo"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/color_rel"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:minHeight="20dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <View
                            android:background="@color/separator_light"
                            android:layout_height="10dp"
                            android:layout_width="match_parent" />

                        <LinearLayout
                            android:id="@+id/variationParent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:orientation="vertical">

                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:background="@color/separator_light"
                        android:id="@+id/view7"
                        android:layout_height="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent" />


                    <RelativeLayout
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/vouchers"
                            android:layout_height="wrap_content"
                            android:layout_width="120dp"
                            android:text="SKU"
                            android:textColor="#555"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/sku"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/arrow2"
                            android:layout_toRightOf="@+id/vouchers"
                            android:layout_width="match_parent"
                            android:textColor="#f00"
                            android:textIsSelectable="true"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/arrow2"
                            android:layout_alignParentRight="true"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:src="@drawable/ic_keyboard_arrow_right"
                            android:tint="#999" />

                    </RelativeLayout>

                    <View
                        android:background="@color/separator_light"
                        android:id="@+id/description_view"
                        android:layout_height="10dp"
                        android:layout_width="match_parent" />

                    <RelativeLayout
                        android:id="@+id/description_rel"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/spec"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_width="120dp"
                            android:text="Description"
                            android:textColor="#555"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/arrow1"
                            android:layout_alignParentRight="true"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:src="@drawable/ic_keyboard_arrow_right"
                            android:tint="#666"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvDescription"
                            android:layout_below="@+id/spec"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:textColor="#000"
                            android:textSize="16sp" />

                    </RelativeLayout>

                    <View
                        android:background="@color/separator_light"
                        android:id="@+id/spec_view"
                        android:layout_height="10dp"
                        android:layout_width="match_parent" />

                    <RelativeLayout
                        android:id="@+id/spec_rel"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/specification"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="3dp"
                            android:layout_width="120dp"
                            android:text="Specifications"
                            android:textColor="#555"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/spec_list"
                            android:layout_height="match_parent"
                            android:layout_marginTop="40dp"
                            android:layout_width="match_parent"
                            android:nestedScrollingEnabled="false">

                        </androidx.recyclerview.widget.RecyclerView>

                    </RelativeLayout>

                    <View
                        android:background="@color/separator_light"
                        android:layout_height="10dp"
                        android:layout_width="match_parent" />


                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:paddingBottom="0dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/avlshop"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="3dp"
                            android:layout_width="wrap_content"
                            android:text="Available at shop "
                            android:textColor="#555"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                        <ProgressBar
                            android:id="@+id/progressBarShop"
                            android:layout_height="110dp"
                            android:layout_weight="0"
                            android:layout_width="150dp"
                            android:paddingBottom="40dp"
                            android:paddingTop="40dp" />

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:id="@+id/shopScroller"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/availableShops"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:nestedScrollingEnabled="false"
                                android:orientation="horizontal"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:id="@+id/empty"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:paddingBottom="20dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="10dp"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_height="80dp"
                                android:layout_weight="0"
                                android:layout_width="150dp"
                                app:srcCompat="@drawable/ic_sad_cart" />

                            <TextView
                                android:gravity="center_horizontal"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:layout_width="wrap_content"
                                android:paddingBottom="10dp"
                                android:text="This product is currently \nnot available at any shop" />

                        </LinearLayout>


                    </LinearLayout>

                    <View

                        android:background="@color/separator_light"
                        android:layout_height="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent" />


                    <!--                    <LinearLayout-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:orientation="vertical"-->
                    <!--                        android:paddingLeft="10dp"-->
                    <!--                        android:paddingTop="10dp"-->
