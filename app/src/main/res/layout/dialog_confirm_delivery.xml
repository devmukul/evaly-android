<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_white_rounder"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:fontFamily="sans-serif-medium"
            android:text="Delivery Confirmation"
            android:textColor="@color/black"
            android:textSize="17sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to mark this order as Delivered? Confirm delivery only if you have received the products."
            android:textColor="@color/c444"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/captchaCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"
            android:letterSpacing="0.3"
            android:text="1111"
            android:textColor="@color/c333"
            android:textSize="30sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/code"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@drawable/input_brd_8r"
                android:hint="Enter the code..."
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="4"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/verify"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="-10dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/btn_verify_captcha"
                android:clickable="true"
                android:elevation="0dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:stateListAnimator="@null"
                android:text="Confirm Delivery"
                android:textColor="@color/fffh"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>
</layout>