<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="@string/rate_the_product"
        android:textColor="@color/c333"
        android:textSize="20sp"
        android:textStyle="bold" />


    <RatingBar
        android:id="@+id/ratingBar"
        style="@android:style/Widget.Material.Light.RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#f8bd21"
        android:isIndicator="false"
        android:numStars="5"
        android:progressTint="#f8bd21"
        android:rating="0"
        android:stepSize="1" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/write_a_review_optional"
        android:textColor="@color/c555"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/review_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/input_bg"
        android:fontFamily="sans-serif"
        android:gravity="top"
        android:hint=""
        android:inputType="textMultiLine"
        android:maxHeight="200dp"
        android:minLines="4"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/input_btn_bg"
        android:fontFamily="sans-serif"
        android:padding="15dp"
        android:stateListAnimator="@null"
        android:text="@string/submit_review"
        android:textAllCaps="false"
        android:textColor="@color/fffh"
        android:textSize="16sp" />


</LinearLayout>