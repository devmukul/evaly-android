<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="bd.com.evaly.evalyshop.ui.order.orderDetails.payment.PaymentBottomSheetViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="5dp"
        app:cardPreventCornerOverlap="true">


        <LinearLayout
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:behavior_hideable="true"
            app:behavior_peekHeight="56dp"
            app:layout_behavior="@string/bottom_sheet_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:text="Amount (BDT)"
                    android:textColor="#666"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/full_or_partial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0"
                    android:background="@drawable/make_payment"
                    android:paddingLeft="6dp"
                    android:paddingTop="3dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="3dp"
                    android:text="Partial Pay"
                    android:textColor="#fff"
                    android:textSize="13sp"
                    android:visibility="gone" />
            </LinearLayout>

            <EditText
                android:id="@+id/amountPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/input_brd"
                android:hint="Amount"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp"
                android:imeOptions="actionDone"
                android:digits="1234567890."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:text="Choose Payment Method:"
                android:textColor="#666"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp">

                <ImageView
                    android:id="@+id/evaly_pay"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0"
                    android:background="@drawable/payment_select_bg"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:src="@drawable/payment_icon_evaly"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/bkash"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0"
                    android:background="@drawable/payment_select_bg"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:src="@drawable/payment_icon_bkash"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/card"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0"
                    android:background="@drawable/payment_select_bg"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:src="@drawable/cardpayment"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingBottom="25dp">



                <TextView
                    android:id="@+id/evalyPayText"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Evaly Balance"
                    android:textAlignment="center"
                    android:layout_marginRight="10dp"
                    android:textColor="#555"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/bKashText"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0"
                    android:text="bKash"
                    android:textAlignment="center"
                    android:textColor="#555"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/gatewayText"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0"
                    android:text="Gateway"
                    android:textAlignment="center"
                    android:textColor="#555"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:visibility="visible" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>