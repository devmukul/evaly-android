<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/stickyScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fafafa"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:transitionGroup="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/transaction_color">

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/bg_overlap"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/transaction_overlap_bg"
                    android:orientation="vertical" />

                <LinearLayout
                    android:id="@+id/balance_holder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/bg_overlap"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="-70dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/balance_large_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="15dp">


                    <ProgressBar
                        android:id="@+id/progressBarTop"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="100dp" />


                    <LinearLayout
                        android:id="@+id/balanceHolder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="15dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/brd_campaign"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/evaly_bal"
                                android:textColor="@color/c444"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvBalance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="৳"
                                android:textColor="@color/c333"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/brd_campaign"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/holding_bal"
                                android:textColor="@color/c444"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvHoldingBalance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="৳"
                                android:textColor="@color/c333"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout

                        android:id="@+id/balanceHolder2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="15dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/brd_campaign"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <TextView
                                android:id="@+id/textView58"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/gift_card_bal"
                                android:textColor="@color/c444"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvGiftCardBalance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="৳"
                                android:textColor="@color/c333"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/brd_campaign"
                            android:orientation="vertical"
                            android:paddingStart="15dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="15dp">


                            <TextView
                                android:id="@+id/cashBackTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/cashback"
                                android:textColor="@color/c444"
                                android:textSize="14sp" />


                            <TextView
                                android:id="@+id/claimCashback"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="3dp"
                                android:layout_toEndOf="@id/cashBackTitle"
                                android:background="@drawable/red_rounded_bg"
                                android:clickable="true"
                                android:paddingLeft="6dp"
                                android:paddingTop="3dp"
                                android:paddingRight="6dp"
                                android:paddingBottom="3dp"
                                android:text="@string/claim"
                                android:textColor="@color/white"
                                android:textSize="13sp" />


                            <TextView
                                android:id="@+id/tvCashbackBalance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/cashBackTitle"
                                android:layout_marginTop="5dp"
                                android:paddingStart="5dp"
                                android:text="@string/taka"
                                android:textColor="@color/c333"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="12dp"
                android:text="@string/recent_transactions"
                android:textColor="@color/c555"
                android:textSize="16sp"
                android:textStyle="bold" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="15dp"
                app:cardElevation="1dp"
                app:cardMaxElevation="0dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="false">

                </androidx.recyclerview.widget.RecyclerView>

            </androidx.cardview.widget.CardView>


            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingTop="10dp"
                android:paddingBottom="20dp" />

            <LinearLayout
                android:id="@+id/empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_transactions_list"
                    app:tint="#aaa" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="200dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="No transaction yet"
                    android:textAlignment="center"
                    android:textColor="#66778e"
                    android:textSize="18sp" />
            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</layout>