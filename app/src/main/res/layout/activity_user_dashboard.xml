        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="6dp"
            android:background="#f6f6f6"
            android:visibility="gone" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>