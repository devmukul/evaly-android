<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fff"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="0dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_box"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/logo"
                            android:layout_width="90dp"
                            android:layout_height="70dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="0" />

                        <TextView
                            android:id="@+id/tvOffer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/make_payment"
                            android:clickable="true"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingLeft="4dp"
                            android:paddingTop="1dp"
                            android:paddingRight="4dp"
                            android:paddingBottom="1dp"
                            android:text="19:19"
                            android:textColor="#fff"
                            android:textSize="12sp"
                            android:visibility="gone" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_weight="0"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="Shop Name"
                            android:textAlignment="textStart"
                            android:textColor="#333"
                            android:textIsSelectable="true"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="0"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <RatingBar
                                android:id="@+id/ratingBar"
                                style="@android:style/Widget.Material.Light.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#aaa"
                                android:numStars="5"
                                android:progressTint="#f8bd21"
                                android:rating="0"
                                android:stepSize="0.1" />

                            <TextView
                                android:id="@+id/ratings_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:text="(0)"
                                android:textColor="#333"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:id="@+id/follow_btn"
                                android:layout_width="0dp"
                                android:layout_height="34dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/follow_btn_bg"
                                android:clickable="true"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingLeft="10dp"
                                android:paddingTop="7dp"
                                android:paddingRight="15dp"
                                android:paddingBottom="7dp">

                                <ImageView
                                    android:id="@+id/imageView21"
                                    android:layout_width="wrap_content"
                                    android:layout_height="16dp"
                                    android:layout_weight="0"
                                    android:tint="#FFF"
                                    app:srcCompat="@drawable/ic_notification" />

                                <TextView
                                    android:id="@+id/follow_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0"
                                    android:paddingLeft="5dp"
                                    android:text="Follow"
                                    android:textColor="#fff" />
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/llInbox"
                                android:layout_width="wrap_content"
                                android:layout_height="34dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="0"
                                android:background="@drawable/share_btn_bg"
                                android:clickable="true"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingLeft="15dp"
                                android:paddingTop="7dp"
                                android:paddingRight="15dp"
                                android:paddingBottom="7dp">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="20dp"
                                    android:tint="#333"
                                    app:srcCompat="@drawable/ic_inbox" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="#fff"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="15dp">


                    <LinearLayout
                        android:id="@+id/call_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_weight="0"
                            android:background="@drawable/circle_bg_shop"
                            android:clickable="false"
                            android:padding="13dp"
                            android:tint="#35c335"
                            app:srcCompat="@drawable/ic_call" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0"
                            android:text="@string/call" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/location"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_weight="0"
                            android:background="@drawable/circle_bg_shop"
                            android:clickable="false"
                            android:padding="13dp"
                            android:tint="@color/colorAccent"
                            app:srcCompat="@drawable/ic_marker" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0"
                            android:clickable="false"
                            android:gravity="center"
                            android:text="@string/location" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/link"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/btnSettings"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_weight="0"
                            android:background="@drawable/circle_bg_shop"
                            android:clickable="false"
                            android:padding="14dp"
                            android:tint="#0EAD75"
                            app:srcCompat="@drawable/ic_delivery" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0"
                            android:clickable="false"
                            android:text="@string/delivery" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/reviews"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_weight="0"
                            android:background="@drawable/circle_bg_shop"
                            android:clickable="false"
                            android:padding="13dp"
                            android:tint="#f8be01"
                            app:srcCompat="@drawable/ic_menu_star" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0"
                            android:text="@string/reviews" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <TextView
        android:id="@+id/catTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/white_to_grey_gradient"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="12dp"
        android:text="@string/categories"
        android:textColor="#555"
        android:textSize="18sp"
        android:textStyle="bold" />

    <include layout="@layout/shimmer_shop_category" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categoriesRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fafafa"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:scrollbars="horizontal"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="#fafafa"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/categoryTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fafafa"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:text="@string/all_products"
            android:textColor="#555"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resetBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="0"
            android:background="@drawable/border_box_thin"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_close_small"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="Reset"
            android:textColor="#333"
            android:textSize="15sp" />
    </LinearLayout>


</LinearLayout>