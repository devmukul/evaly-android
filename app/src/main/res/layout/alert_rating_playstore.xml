<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="@string/rate_evaly_on_playstore"
        android:textColor="@color/c333"
        android:textSize="20sp"
        android:textStyle="bold" />


    <RatingBar
        android:id="@+id/ratingBar"
        style="@android:style/Widget.Material.Light.RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#f8bd21"
        android:isIndicator="false"
        android:numStars="5"
        android:progressTint="#f8bd21"
        android:rating="0"
        android:stepSize="1" />


    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/retry_btn"
        android:fontFamily="sans-serif"
        android:padding="15dp"
        android:stateListAnimator="@null"
        android:text="@string/rate_now"
        android:textAllCaps="false"
        android:textColor="@color/fff"
        android:textSize="16sp" />


</LinearLayout>