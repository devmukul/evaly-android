<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical">


    <View
        android:id="@+id/dividerView"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#fafafa" />

    <LinearLayout
        android:id="@+id/sellerHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imageView6"
            app:srcCompat="@drawable/ic_menu_store"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginTop="1dp"
            android:layout_weight="0"
            android:paddingLeft="5dp"
            android:tint="#555" />

        <TextView
            android:id="@+id/shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:paddingRight="15dp"
            android:text="@string/seller_unknown"
            android:textColor="#555"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/variation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="#555"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:focusableInTouchMode="true"
        android:paddingTop="5dp"
        android:paddingBottom="20dp">


        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="false"
            android:layout_centerVertical="false"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:gravity="bottom"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp" />

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/sellerHolder"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/checkBox"
            android:adjustViewBounds="true"
            android:clickable="true"
            app:srcCompat="@drawable/ic_placeholder_small" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sellerHolder"
            android:layout_alignParentTop="false"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/product_image"
            android:clickable="true"
            android:maxLines="2"
            android:text=" "
            android:textColor="#444"
            android:textIsSelectable="false"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name"
            android:layout_alignStart="@+id/product_name"
            android:layout_marginTop="3dp"
            android:text="1000 x 2"
            android:textColor="#777"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/priceTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"
            android:layout_alignStart="@+id/product_name"
            android:layout_marginTop="6dp"
            android:text="2000"
            android:textColor="#f57224"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/wholeSalePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/priceTotal"
            android:layout_toRightOf="@+id/product_image"
            android:text="2100"
            android:textColor="#f57224"
            android:textSize="13sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"
            android:layout_alignStart="@+id/product_name"
            android:layout_alignParentBottom="false"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_time_small"
            android:drawablePadding="5dp"
            android:paddingBottom="5dp"
            android:text="1 minute ago"
            android:textColor="#777"
            android:textSize="14sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/countHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/priceTotal"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="false"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/minus"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_weight="0"
                android:background="#eee"
                android:clickable="true"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_minus" />

            <EditText
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="1"
                android:maxLength="4"
                android:textSize="18sp"
                android:enabled="false"
                android:textColor="#333"/>

            <ImageView
                android:id="@+id/plus"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_weight="0"
                android:background="#eee"
                android:clickable="true"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_plus" />
        </LinearLayout>


        <ImageView
            android:id="@+id/trash"
            android:layout_width="50dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="0dp"
            android:paddingBottom="5dp"
            android:tint="@color/colorAccent"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_trash" />


    </RelativeLayout>

</LinearLayout>