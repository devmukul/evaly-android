<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="35dp"
        app:cardElevation="1dp"
        app:cardPreventCornerOverlap="true">

        <ImageView
            android:id="@+id/picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/user_image" />
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/comment_box_bg"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/postImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/commentHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/postImage"
                android:gravity="center_vertical|right"
                android:orientation="horizontal"
                android:paddingTop="0dp">


                <ImageView
                    android:id="@+id/like_icon"
                    android:layout_width="35dp"
                    android:layout_height="16dp"
                    android:layout_weight="0"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_favorite_black" />

                <ImageView
                    android:id="@+id/replyIcon"
                    android:layout_width="35dp"
                    android:layout_height="16dp"
                    android:layout_weight="0"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    app:srcCompat="@drawable/ic_reply" />


                <TextView
                    android:id="@+id/likeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="Like"
                    android:textColor="#555"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/replyCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Reply"
                    android:textColor="#555"
                    android:textSize="14sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_name"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Comment text..."
                android:textColor="#444"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="#333"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:text="3 min ago"
                android:textColor="#555"
                android:textSize="12sp" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/replyHolder"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:visibility="gone">

            <android.support.v7.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                app:cardCornerRadius="35dp"
                app:cardElevation="1dp"
                app:cardPreventCornerOverlap="true">

                <ImageView
                    android:id="@+id/pictureReply1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/user_image" />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/reply1Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#333"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reply1Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:text=""
                android:textColor="#333"
                android:textSize="13sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/replyViewCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#444"
            android:textSize="15sp"
            android:visibility="gone"
            android:text="Show previous 0 more replies"
            android:layout_marginLeft="15dp"
            android:clickable="true"/>

    </LinearLayout>
</LinearLayout>