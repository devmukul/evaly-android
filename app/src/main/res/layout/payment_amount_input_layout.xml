<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_round"
        android:orientation="vertical"
        android:paddingHorizontal="4dp"
        android:paddingTop="20dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="How much do you want to Pay?"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="You can pay partially, but we suggest you to pay full amount to start processing your order for delivery."
            android:textColor="@color/c444"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/brd_payment_methods"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingRight="10dp"
                android:text="à§³"
                android:textColor="@color/c555"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/amountPay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:drawableRight="@drawable/ic_edit_drawable"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:hint="Amount (BDT)"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLines="1"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:paddingBottom="1dp"
                android:text="Close"
                android:textColor="@color/c333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/makePayment"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/make_payment_square"
                android:backgroundTint="#000"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:paddingHorizontal="22dp"
                android:paddingBottom="1dp"
                android:text="Continue Payment"
                android:textColor="@color/fffh"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>
</layout>