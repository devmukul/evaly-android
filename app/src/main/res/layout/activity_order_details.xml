<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:focusableInTouchMode="true"
            tools:context=".ui.order.orderDetails.OrderDetailsActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="@string/invoice_no"
                        android:textAllCaps="true"
                        android:textColor="#333"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:paddingLeft="8dp"
                        android:textAllCaps="true"
                        android:textColor="#137ef4"
                        android:textIsSelectable="true"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/order_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:textAllCaps="true"
                        android:textColor="#888" />

                </LinearLayout>

                <com.badoualy.stepperindicator.StepperIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:stpi_circleColor="#ddd"
                    app:stpi_circleRadius="10dp"
                    app:stpi_circleStrokeWidth="2dp"
                    app:stpi_doneIconDrawable="@drawable/ic_tick"
                    app:stpi_indicatorColor="#4cb81a"
                    app:stpi_labelMarginTop="7dp"
                    app:stpi_labels="@array/orderTrackingStepLabels"
                    app:stpi_lineColor="#ddd"
                    app:stpi_lineDoneColor="#4cb81a"
                    app:stpi_stepCount="6" />

                <com.badoualy.stepperindicator.StepperIndicator
                    android:id="@+id/indicatorCancelled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"
                    app:stpi_circleColor="#ddd"
                    app:stpi_circleRadius="10dp"
                    app:stpi_circleStrokeWidth="2dp"
                    app:stpi_doneIconDrawable="@drawable/ic_close_smallest"
                    app:stpi_indicatorColor="#e51614"
                    app:stpi_labelMarginTop="7dp"
                    app:stpi_labels="@array/orderTrackingStepLabels"
                    app:stpi_lineColor="#ddd"
                    app:stpi_lineDoneColor="#e51614"
                    app:stpi_stepCount="6" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="@string/order_status"
                        android:textAllCaps="true"
                        android:textColor="#333"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/cancelBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/cancel_brd"
                        android:clickable="true"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="6dp"
                        android:text="Cancel"
                        android:textColor="@color/colorAccent"
                        android:textSize="14sp"
                        android:visibility="gone" />

                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    tools:itemCount="2">

                </androidx.recyclerview.widget.RecyclerView>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="0dp"
                    android:background="#fafafa" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.4"
                        android:text="#"
                        android:textColor="#333" />

                    <TextView
                        android:id="@+id/textView33"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/product"
                        android:textAlignment="center"
                        android:textColor="#333" />

                    <TextView
                        android:id="@+id/textView34"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/rate_amp_qty"
                        android:textAlignment="center"
                        android:textColor="#333" />

                    <TextView
                        android:id="@+id/textView35"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/amount"
                        android:textAlignment="center"
                        android:textColor="#333" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/product_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:itemCount="2">

                </androidx.recyclerview.widget.RecyclerView>


                <LinearLayout
                    android:id="@+id/campaignRuleHolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="15dp"
                        android:background="#fafafa" />

                    <TextView
                        android:id="@+id/tvCampaignRule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingTop="15dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="5dp"
                        android:text=""
                        android:textColor="#444" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="15dp"
                    android:background="#fafafa" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/view17"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="0"
                            android:background="#eee" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/total_colon"
                                android:textColor="#333"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/total_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="textEnd"
                                android:textColor="#333" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/paid"
                                android:textColor="#333"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/paid_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="textEnd"
                                android:textColor="#333" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView46"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/due"
                                android:textColor="#333"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/due_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="textEnd"
                                android:textColor="#333" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="#fafafa" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingBottom="5dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView40"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="@string/payment_status"
                            android:textColor="#333"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/payment_method"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="25dp"
                            android:text="@string/evaly_pay"
                            android:textColor="#ec4958"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/balance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/balance_colon"
                            android:textColor="#444" />


                        <TextView
                            android:id="@+id/payPartially"
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/pay_partially"
                            android:clickable="true"
                            android:paddingLeft="10dp"
                            android:paddingTop="8dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="8dp"
                            android:text="Pay Partially"
                            android:textAlignment="center"
                            android:textColor="#333"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="right"
                        android:orientation="vertical"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">


                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:id="@+id/paymentStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_weight="1"
                                android:background="#A53F3F"
                                android:clickable="false"
                                android:paddingLeft="10dp"
                                android:paddingTop="5dp"
                                android:paddingRight="10dp"
                                android:paddingBottom="5dp"
                                android:text="Unpaid"
                                android:textColor="#fff"
                                android:textSize="14sp" />

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:id="@+id/makePayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/make_payment"
                        android:clickable="true"
                        android:paddingLeft="15dp"
                        android:paddingTop="8dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="8dp"
                        android:text="@string/make_payment"
                        android:textAlignment="center"
                        android:textColor="#fff" />

                    <TextView
                        android:id="@+id/payViaGiftCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/pay_partially"
                        android:clickable="true"
                        android:paddingLeft="15dp"
                        android:paddingTop="8dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="8dp"
                        android:text="@string/pay_via_gift_card"
                        android:textAlignment="center"
                        android:textColor="#333"
                        android:visibility="visible" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#fafafa" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="25dp">

                    <RelativeLayout
                        android:id="@+id/shop_info"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/bill"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="@string/bill_from"
                            android:textColor="#333" />

                        <ImageView
                            android:id="@+id/storeImg"
                            android:layout_width="22dp"
                            android:layout_height="16dp"
                            android:layout_below="@+id/bill"
                            android:layout_marginTop="3dp"
                            android:layout_marginRight="3dp"
                            android:tint="#666"
                            app:srcCompat="@drawable/ic_menu_store" />

                        <TextView
                            android:id="@+id/billfromName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/bill"
                            android:layout_marginBottom="5dp"
                            android:layout_toRightOf="@+id/storeImg" />

                        <ImageView
                            android:id="@+id/marker1"
                            android:layout_width="22dp"
                            android:layout_height="16dp"
                            android:layout_below="@+id/billfromName"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="3dp"
                            android:tint="#555"
                            app:srcCompat="@drawable/ic_marker" />

                        <TextView
                            android:id="@+id/billfromAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/billfromName"
                            android:layout_marginBottom="5dp"
                            android:layout_toRightOf="@+id/marker1"
                            android:paddingRight="10dp" />

                        <ImageView
                            android:id="@+id/phone1"
                            android:layout_width="22dp"
                            android:layout_height="16dp"
                            android:layout_below="@+id/billfromAddress"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="3dp"
                            android:tint="#555"
                            app:srcCompat="@drawable/ic_input_phone" />

                        <TextView
                            android:id="@+id/billfromPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/billfromAddress"
                            android:layout_toRightOf="@+id/phone1"
                            android:autoLink="phone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/bill1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="@string/bill_to"
                            android:textColor="#333" />

                        <ImageView
                            android:id="@+id/storeImg1"
                            android:layout_width="22dp"
                            android:layout_height="16dp"
                            android:layout_below="@+id/bill1"
                            android:layout_marginTop="3dp"
                            android:layout_marginRight="3dp"
                            android:tint="#666"
                            app:srcCompat="@drawable/ic_user" />

                        <TextView
                            android:id="@+id/billtoName1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/bill1"
                            android:layout_marginBottom="5dp"
                            android:layout_toRightOf="@+id/storeImg1" />

                        <ImageView
                            android:id="@+id/marker2"
                            android:layout_width="22dp"
                            android:layout_height="16dp"
                            android:layout_below="@+id/billtoName1"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="3dp"
                            android:tint="#555"
                            app:srcCompat="@drawable/ic_marker" />

                        <TextView
                            android:id="@+id/billtoAddress1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/billtoName1"
                            android:layout_marginBottom="5dp"
                            android:layout_toRightOf="@+id/marker2"
                            android:paddingRight="10dp" />

                        <ImageView
                            android:id="@+id/phone2"
                            android:layout_width="22dp"
                            android:layout_height="16dp"
                            android:layout_below="@+id/billtoAddress1"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="3dp"
                            android:tint="#555"
                            app:srcCompat="@drawable/ic_input_phone" />

                        <TextView
                            android:id="@+id/billtoPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/billtoAddress1"
                            android:layout_toRightOf="@+id/phone2"
                            android:autoLink="phone" />
                    </RelativeLayout>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#fafafa" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="20dp"
                    android:text="@string/need_help"
                    android:textColor="#333"
                    android:textSize="16sp"
                    android:textStyle="normal" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvReport"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/red_rounded_bg"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingTop="8dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="8dp"
                        android:text="@string/report_issue"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tvViewIssue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/green_rounded_bg"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingTop="8dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="8dp"
                        android:text="@string/existing_issues"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>