<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:focusableInTouchMode="true"
            tools:context=".activity.orderDetails.OrderDetailsActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="INVOICE NO"
                        android:textAllCaps="true"
                        android:textColor="#333"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:paddingLeft="8dp"
                        android:textAllCaps="true"
                        android:textColor="#137ef4"
                        android:textIsSelectable="true"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/order_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:textAllCaps="true"
                        android:textColor="#888" />

                </LinearLayout>

                <com.badoualy.stepperindicator.StepperIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    app:stpi_circleColor="#ddd"
                    app:stpi_circleRadius="10dp"
                    app:stpi_circleStrokeWidth="2dp"
                    app:stpi_indicatorColor="#4cb81a"
                    app:stpi_lineColor="#ddd"
                    app:stpi_lineDoneColor="#4cb81a"
                    app:stpi_stepCount="6" />

                <com.badoualy.stepperindicator.StepperIndicator
                    android:id="@+id/indicatorCancelled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:visibility="gone"
                    app:stpi_circleColor="#ddd"
                    app:stpi_circleRadius="10dp"
                    app:stpi_circleStrokeWidth="2dp"
                    app:stpi_doneIconDrawable="@drawable/ic_close_smallest"
                    app:stpi_indicatorColor="#e51614"
                    app:stpi_lineColor="#ddd"
                    app:stpi_lineDoneColor="#e51614"
                    app:stpi_stepCount="6" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:text="Pending"
                        android:textAlignment="viewStart"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Confirmed"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Processing"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Picked"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Shipped"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:text="Delivered"
                        android:textAlignment="textEnd"
                        android:textSize="11sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="0"
                    android:text="ORDER STATUS"
                    android:textAllCaps="true"
                    android:textColor="#333"
                    android:textSize="18sp" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                </android.support.v7.widget.RecyclerView>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="0dp"
                    android:background="#fafafa" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.4"
                        android:text="#"
                        android:textColor="#333" />

                    <TextView
                        android:id="@+id/textView33"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Product"
                        android:textAlignment="center"
                        android:textColor="#333" />

                    <TextView
                        android:id="@+id/textView34"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rate &amp; Qty"
                        android:textAlignment="center"
                        android:textColor="#333" />

                    <TextView
                        android:id="@+id/textView35"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Amount"
                        android:textAlignment="center"
                        android:textColor="#333" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/product_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="15dp"
                    android:background="#fafafa" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView40"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Payment Methods"
                            android:textColor="#333"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/payment_method"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#ec4958"
                            android:text="Evaly Pay"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/balance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textColor="#444" />

                        <TextView
                            android:id="@+id/makePayment"
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/make_payment"
                            android:clickable="true"
                            android:paddingLeft="10dp"
                            android:paddingTop="8dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="8dp"
                            android:text="Make Payment"
                            android:textAlignment="center"
                            android:textColor="#fff" />

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/payPartially"
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/pay_partially"
                            android:clickable="true"
                            android:paddingLeft="10dp"
                            android:paddingTop="8dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="8dp"
                            android:text="Pay Partially"
                            android:textAlignment="center"
                            android:textColor="#333" />

                        <TextView
                            android:id="@+id/payViaGiftCard"
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/pay_partially"
                            android:clickable="true"
                            android:paddingLeft="10dp"
                            android:paddingTop="8dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="8dp"
                            android:text="Pay via Gift Card"
                            android:textAlignment="center"
                            android:textColor="#333"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/view17"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="0"
                            android:background="#eee" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Total"
                                android:textColor="#333"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/total_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="textEnd"
                                android:textColor="#333" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Paid"
                                android:textColor="#333"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/paid_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="textEnd"
                                android:textColor="#333" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView46"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Due"
                                android:textColor="#333"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/due_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="textEnd"
                                android:textColor="#333" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#fafafa" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="25dp">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:id="@+id/shop_info">

                        <TextView
                            android:id="@+id/bill"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Bill From"
                            android:textColor="#333" />

                        <ImageView
                            android:id="@+id/storeImg"
                            android:layout_width="22dp"
                            android:layout_height="16dp"
                            android:layout_below="@+id/bill"
                            android:layout_marginTop="3dp"
                            android:layout_marginRight="3dp"
                            android:tint="#666"
                            app:srcCompat="@drawable/ic_menu_store" />

                        <TextView
                            android:id="@+id/billfromName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/bill"
                            android:layout_marginBottom="5dp"
                            android:layout_toRightOf="@+id/storeImg" />

                        <ImageView
                            android:id="@+id/marker1"
                            android:layout_width="22dp"
                            android:layout_height="16dp"
                            android:layout_below="@+id/billfromName"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="3dp"
                            android:tint="#555"
                            app:srcCompat="@drawable/ic_marker" />

                        <TextView
                            android:id="@+id/billfromAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/billfromName"
                            android:layout_marginBottom="5dp"
                            android:layout_toRightOf="@+id/marker1"
                            android:paddingRight="10dp" />

                        <ImageView
                            android:id="@+id/phone1"
                            android:layout_width="22dp"
                            android:layout_height="16dp"
                            android:layout_below="@+id/billfromAddress"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="3dp"
                            android:tint="#555"
                            app:srcCompat="@drawable/ic_input_phone" />

                        <TextView
                            android:id="@+id/billfromPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/billfromAddress"
                            android:layout_toRightOf="@+id/phone1"
                            android:autoLink="phone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/bill"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Bill To"
                            android:textColor="#333" />

                        <ImageView
                            android:id="@+id/storeImg"
                            android:layout_width="22dp"
                            android:layout_height="16dp"
                            android:layout_below="@+id/bill"
                            android:layout_marginTop="3dp"
                            android:layout_marginRight="3dp"
                            android:tint="#666"
                            app:srcCompat="@drawable/ic_user" />

                        <TextView
                            android:id="@+id/billtoName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/bill"
                            android:layout_marginBottom="5dp"
                            android:layout_toRightOf="@+id/storeImg" />

                        <ImageView
                            android:id="@+id/marker1"
                            android:layout_width="22dp"
                            android:layout_height="16dp"
                            android:layout_below="@+id/billtoName"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="3dp"
                            android:tint="#555"
                            app:srcCompat="@drawable/ic_marker" />

                        <TextView
                            android:id="@+id/billtoAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/billtoName"
                            android:layout_marginBottom="5dp"
                            android:layout_toRightOf="@+id/marker1"
                            android:paddingRight="10dp" />

                        <ImageView
                            android:id="@+id/phone1"
                            android:layout_width="22dp"
                            android:layout_height="16dp"
                            android:layout_below="@+id/billtoAddress"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="3dp"
                            android:tint="#555"
                            app:srcCompat="@drawable/ic_input_phone" />

                        <TextView
                            android:id="@+id/billtoPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/billtoAddress"
                            android:layout_toRightOf="@+id/phone1"
                            android:autoLink="phone" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvReport"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="Report Issue"
                        android:gravity="center"
                        android:background="@drawable/red_rounded_bg"
                        android:textColor="@color/white"
                        android:layout_marginRight="5dp" />

                    <TextView
                        android:id="@+id/tvViewIssue"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="Existing Issues"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/green_rounded_bg"
                        android:layout_marginLeft="5dp" />

                </LinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>


    <View
        android:visibility="gone"
        android:id="@+id/bg"
        android:background="#70000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" />

    <include layout="@layout/bottom_sheet_order_details_payment" />


</android.support.design.widget.CoordinatorLayout>