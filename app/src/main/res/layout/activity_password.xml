<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="25dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">


    <!-- Email Label -->

    <TextView
        android:id="@+id/textView48"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:text="Verify your number"
        android:textColor="#333"
        android:textSize="24sp" />

    <TextView
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="10dp"
        android:text="A code is sent to your number, please check messages and enter here." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/pin1Et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:digits="1234567890"
            android:gravity="center"
            android:inputType="numberSigned"
            android:maxLength="1"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:text=""
            android:textSize="28sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pin2Et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:digits="1234567890"
            android:gravity="center"
            android:inputType="numberSigned"
            android:maxLength="1"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:textSize="28sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pin3Et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:digits="1234567890"
            android:gravity="center"
            android:inputType="numberSigned"
            android:maxLength="1"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:textSize="28sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pin4Et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:digits="1234567890"
            android:gravity="center"
            android:inputType="numberSigned"
            android:maxLength="1"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:textSize="28sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pin5Et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:digits="1234567890"
            android:gravity="center"
            android:inputType="numberSigned"
            android:maxLength="1"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:textSize="28sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_bg">

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/ic_input_lock"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:textColorHint="#666"
            android:textSize="16sp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/tvPasswordWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* Please input at least one special character"
        android:textColor="@color/red_app"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/input_bg">

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/ic_input_lock"
            android:drawablePadding="10dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:textColorHint="#666"
            android:textSize="16sp" />


    </RelativeLayout>


    <Button
        android:id="@+id/btnResetPassword"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_btn_bg"
        android:elevation="0dp"
        android:padding="15dp"
        android:stateListAnimator="@null"
        android:text="Set Password"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="16sp" />


</LinearLayout>
