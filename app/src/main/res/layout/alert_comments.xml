<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".activity.newsfeed.NewsfeedActivity">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#f8f8f8"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:paddingBottom="5dp">


                <android.support.v7.widget.CardView
                    android:id="@+id/pictureHolder"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="35dp"
                    app:cardElevation="1dp"
                    app:cardPreventCornerOverlap="true">

                    <ImageView
                        android:id="@+id/picture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/rassel_bhaia" />
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/pictureHolder"
                    android:text="Mohammad Rassel"
                    android:textColor="#333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_name"
                    android:layout_alignStart="@id/user_name"
                    android:text="2 hours ago"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pictureHolder"
                    android:paddingLeft="17dp"
                    android:paddingTop="15dp"
                    android:paddingRight="17dp"
                    android:paddingBottom="15dp"
                    android:text="50% ক্যাশব্যাক অফার শনিবার (07.09.2019) রাত পর্যন্ত থাকবে । আমাদের অর্ডার ডেলিভারি ক্যাপাসিটি ঠিক রাখা স্বার্থে অফার 13 তারিখ পর্যন্ত কন্টিনিউ হবে না। যারা অর্ডার করেছেন তাদের পেমেন্ট রবিবার পর্যন্ত নেওয়া হবে।"
                    android:textColor="#444"
                    android:textSize="16sp" />


            </RelativeLayout>


            <View
                android:id="@+id/view11"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView52"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="Comments"
                android:textColor="#333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        app:cardCornerRadius="35dp"
                        app:cardElevation="1dp"
                        app:cardPreventCornerOverlap="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/user_image" />
                    </android.support.v7.widget.CardView>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/comment_box_bg"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:id="@+id/user1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MD Fahad"
                            android:textColor="#333"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/comtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/user1"
                            android:layout_marginTop="5dp"
                            android:text="১৮ তারিখে ওর্ডার করি টেকনিক্যাল সমস্যার কারনে ২১ তারিখে পিক হয় আজ ৪ তারিখ ইনভয়েস এখন ও সপে যায় নি ১৫+ হয়েছে। এখন ও কোন কল পেলাম নাহ।"
                            android:textColor="#444"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/timeAgo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/comtext"
                            android:layout_marginTop="10dp"
                            android:text="3 minutes ago"
                            android:textColor="#3F51B5"
                            android:textSize="12sp" />


                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="#f8f8f8"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="top"
            android:background="@drawable/comment_input_bg"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp">

        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="Write your comment..."
            android:inputType="textMultiLine|textPersonName"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:textSize="14sp" />


            <ImageView
                android:id="@+id/uploadImage"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:tint="#444"
                app:srcCompat="@drawable/ic_gallery" />


        </LinearLayout>

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="0"
            android:paddingRight="15dp"
            android:tint="#444"
            app:srcCompat="@drawable/ic_send_button" />


    </LinearLayout>


</LinearLayout>